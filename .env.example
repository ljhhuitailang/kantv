# KanTV Environment Variables Example
# Copy this file to .env.local and fill in your values

# Storage Configuration
# Options: 'localstorage' | 'redis' | 'upstash' | 'kvrocks' | 'd1'
NEXT_PUBLIC_STORAGE_TYPE=localstorage

# User Registration
# Set to 'true' to enable user self-registration (requires redis/upstash/kvrocks storage)
NEXT_PUBLIC_ENABLE_REGISTRATION=false

# Redis Configuration (if using 'redis')
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Upstash Redis Configuration (if using 'upstash' - Recommended for Vercel/ClawCloud)
# Note: Use UPSTASH_URL and UPSTASH_TOKEN (not UPSTASH_REDIS_REST_*)
UPSTASH_URL=
UPSTASH_TOKEN=

# Kvrocks Configuration (if using 'kvrocks')
KVROCKS_URL=

# Cloudflare D1 Configuration (if using 'd1' - for Cloudflare Pages deployment)
# D1 database is accessed through environment binding, no URL needed
# Set NEXT_PUBLIC_STORAGE_TYPE=d1 and bind D1 database in Cloudflare Dashboard

# Admin Configuration
# USERNAME is the primary admin account (owner)
USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here
# Deprecated: Use USERNAME instead of ADMIN_USERNAME
# PASSWORD is an alias for ADMIN_PASSWORD
PASSWORD=your_admin_password_here

# Site Configuration
NEXT_PUBLIC_SITE_NAME=KanTV
SITE_BASE=
ANNOUNCEMENT=

# Search Configuration
NEXT_PUBLIC_SEARCH_MAX_PAGE=5
NEXT_PUBLIC_FLUID_SEARCH=true

# Adult Content Filter (Global Setting)
# Set to 'true' to disable adult content filtering globally (allow adult content)
# Set to 'false' to enable filtering (hide adult content) - DEFAULT
# Note: This can be overridden in admin panel for fine-grained control
DISABLE_YELLOW_FILTER=false

# Douban Proxy Configuration
NEXT_PUBLIC_DOUBAN_PROXY_TYPE=
NEXT_PUBLIC_DOUBAN_PROXY=
NEXT_PUBLIC_DOUBAN_IMAGE_PROXY_TYPE=
NEXT_PUBLIC_DOUBAN_IMAGE_PROXY=

# Optional: External API Keys
DOUBAN_API_KEY=
TMDB_API_KEY=

# Development
NODE_ENV=development